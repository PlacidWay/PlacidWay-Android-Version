<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.placidway.inc" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />


    <application
        android:name=".appInfo.PlacidWay"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name=".activities.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.MedicalCenterActivity"
            android:label="@string/title_activity_medical_center" >
        </activity>
        <activity
            android:name=".activities.PricingActivity"
            android:label="@string/title_activity_pricing" >
        </activity>
        <activity
            android:name=".activities.AboutUsActivity"
            android:label="@string/title_activity_about_us" >
        </activity>
        <activity
            android:name=".activities.SearchResultActivity"
            android:label="@string/title_activity_search_result" >
        </activity>
        <activity
            android:name=".activities.PriceSearchResultActivity"
            android:label="@string/title_activity_price_search_result" >
        </activity>
        <activity
            android:name=".activities.DetailListActivity"
            android:label="@string/title_activity_detail_list" >
        </activity>
        <activity
            android:name=".activities.FreeQouteActivity"
            android:label="@string/title_activity_free_qoute" >
        </activity>
        <activity
            android:name=".activities.PricingResultActivity">
        </activity>
        <activity
            android:name=".activities.PopUpWebView"
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" >
        </activity>

    </application>

</manifest>
